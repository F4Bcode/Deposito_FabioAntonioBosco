#include <stdio.h>

int main(){
//Definizione delle variabili
char name[20];
int number1;
int number2;
int somma;

//1) Richiesta inserimento nome e relativa lettura.
    printf("Inserisci il tuo nome: ");
    if(scanf("%19s",name)!=1){
        printf("INPUT NON VALIDO PER IL NOME.\n");
        return 1;
        }
        
//2) Richiesta inserimento del primo numero.
    printf("Inserisci un numero intero: ");
    if(scanf("%d",&number1)!=1){
        printf("INPUT NUMERO NON VALIDO.\n");
        return 1;
        }
        
//3) Richiesta inserimento del secondo numero.
    printf("Inserisci un numero intero: ");
    if(scanf("%d",&number2)!=1){
        printf("INPUT NUMERO NON VALIDO.\n");
        return 1;
        }
        
//4 Calcolo della somma dopo aver ottenuto i numeri
    somma = number1 + number2;
    
    
//5) Stampa il nome utente e la somma dei due numeri
    printf("Nome Utente: %s\n", name);
    printf("Somma dei due numeri Inseriti: %d\n", somma);
    
return 0;
}
