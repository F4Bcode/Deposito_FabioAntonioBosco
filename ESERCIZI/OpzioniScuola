include <stdio.h>
#include <string.h>
#include <stdlib.h>

int main() {
    char ruolo[20];
    int opzione;
    int variabile_segreta = 0;
    
    // Chiede all'utente di inserire il proprio ruolo
    printf("Inserisci il tuo ruolo (studente/docente/ospite): ");
    scanf("%s", ruolo);
    
    // Chiede all'utente di scegliere un'opzione di menu
    printf("Scegli un'opzione di menu (1-3): ");
    scanf("%d", &opzione);
    
    // Controllo combinazione ruolo e opzione
    if (strcmp(ruolo, "studente") == 0 && opzione == 1) {
        printf("Accesso a materiali didattici\n");
    }
    else if (strcmp(ruolo, "docente") == 0 && opzione == 2) {
        printf("Accesso alla gestione corsi\n");
    }
    else if (strcmp(ruolo, "ospite") == 0) {
        printf("Area informativa\n");
    }
    else {
        printf("Opzione non disponibile\n");
    }
    
    // Switch sull'opzione scelta per stampare messaggi aggiuntivi
    switch(opzione) {
        case 1:
            printf("Hai scelto: Visualizza\n");
            variabile_segreta = 1;
            break;
        case 2:
            printf("Hai scelto: Modifica\n");
            variabile_segreta = 2;
            break;
        case 3:
            printf("Hai scelto: Esci\n");
            variabile_segreta = 3;
            break;
        default:
            printf("Opzione di menu non valida\n");
            break;
    }
    
    // Stampa la variabile segreta (per verifica)
    printf("Valore variabile segreta: %d\n", variabile_segreta);
    
    return 0;
}
